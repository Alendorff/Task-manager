doctype html
html
    head
        include components/common-includes.jade
        //roboto
        link(href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css')

        //custom
        link(rel="stylesheet" href="/styles/projects.css")
        script(src="/js/projects.js")
        title List of projects

    body
        //top-nav-menu
        include components/navbar
        //list of projects header
        div#projects-list.container
            div.row
                div#list-header List of your projects

            div#col-headers.row
                div#date-header Date
                div#title-header Title

            //main content
            div.row
                each project in projects
                    div.project(onclick="showProject(this)").container-fluid
                        div.project-title.row
                            .col-xs-2 #{project.lastModified}
                            .col-xs-10 #{project.title}
                                span.glyphicon.glyphicon-arrow-right.goto-button
                        div.description.container-fluid
                            //description is hidden by default. Show when click prev block
                            div.row.info
                                div.col-xs-2 tasks: #{project.tasks}
                                div.col-xs-2 completed: #{project.completed}
                                div.col-xs-5 time spent: #{project.timeSpent}
                                div.col-xs-3 members: #{project.members}
                            div.row.controls
                                div.del.col-xs-1
                                    i.fa.fa-trash
                                div.share.col-xs-1
                                    i.fa.fa-eye
                                div.group.col-xs-1
                                    i.fa.fa-group

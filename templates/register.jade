doctype html
html
   head
      include components/common-includes.jade

      // bootstrap-social
      link(rel="stylesheet" href="/bower_components/bootstrap-social/bootstrap-social.css")

      // custom
      link(rel="stylesheet" href="/styles/login-form.css")
      title #{pageTitle}

   body
      include components/navbar.jade
      div.container
      form.form-signin(action="/newUser" onsubmit="return validateForm()" method="post")
         h2.form-signin-heading Create your account
         label.sr-only(for="email") Email
         label.sr-only(for="password") Password
         label.sr-only(for="name") Name

         input#email.form-control(name="email" type="email" placeholder="Email address" required autofocus)
         input#password.form-control(name="password" type="password" placeholder="Password" required)
         input#name.form-control(name="name" type="text" placeholder="Your name" required)

         button.btn.btn-lg.btn-primary.btn-block.btn-sign-up(type="submit") Sign up

         hr

         - var sb_title = "Or just use one of your accounts:"

         include components/social-buttons.jade
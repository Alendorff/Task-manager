doctype html
html
    head

        include components/common-includes.jade

        // bootstrap-social
        link(rel="stylesheet" href="/bower_components/bootstrap-social/bootstrap-social.css")


        //custom
        link(rel="stylesheet" href="/styles/login-form.css")
        script(src="/js/lib.js")
        script(src="/js/signin.js")
        title #{pageTitle}
    body
        include components/navbar.jade
        .container
            form.form-signin(action="/login" method="post")
                h2.form-signin-heading Please sign in

                label.sr-only(for="email") Email
                label.sr-only(for="password") Password

                input#email.form-control(
                    name="email" type="email" placeholder="Email address" required autofocus
                )
                input#password.form-control(
                    name="password" type="password" placeholder="Password" required
                )

                .checkbox
                    label
                        input(type="checkbox" value="remember-me" checked)
                        | Remember me

                button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in
                br
                a.reg-link(href="/register") Create account
                hr
                - var sb_title = "You also may sign with:"
                include components/social-buttons.jade

    if authError
        script
            | showErrorMessage("Incorrect email or password. Please try again");